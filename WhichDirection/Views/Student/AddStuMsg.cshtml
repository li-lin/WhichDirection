@model WhichDirection.Domain.Entities.Student
@{
    ViewBag.Title = "AddStuMsg";
}

<h2>添加学生信息</h2>
<center>
    <div>
        @using (Html.BeginForm("AddStuMsg", "Student", FormMethod.Post, new { @class = "css" }))
        {
            <table>
                <tr>
                    <td>
                        学生姓名:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name, new { Value = ViewBag.ware.Price })
                    </td>
                </tr>
                <tr>
                    <td>
                        学生学号:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.LoginName, new { Value = ViewBag.ware.Title })
                    </td>
                </tr>
                <tr>
                    <td>
                        学生专业:
                    </td>
                    <td>
                        @Html.TextAreaFor(m => m.Major)
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="添加" />
                    </td>
                </tr>
            </table>
        }
    </div>
</center>

