@model WhichDirection.Domain.Entities.Teacher
@{
    ViewBag.Title = "AddTeaMsgView";
}

<h2>添加老师信息</h2>
<center>
    <div>
        @using (Html.BeginForm("AddTeaMsg", "Teacher", FormMethod.Post, new { @class = "css" }))
        {
            <table>
                <tr>
                    <td>
                        教师姓名:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        教师工号:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.LoginName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="添加" />
                    </td>
                </tr>
            </table>
        }
    </div>
</center>

